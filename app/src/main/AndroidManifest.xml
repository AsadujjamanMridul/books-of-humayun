<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booksofhumayun">

    <application
        android:allowBackup="true"
        android:icon="@drawable/profile"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullView"
            android:theme="@style/AppThemeChapters" />
        <activity
            android:name=".Chapters"
            android:theme="@style/AppThemeChapters" />
        <activity
            android:name=".CatagoryShuvro"
            android:label="Shuvro"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeShuvro" />
        <activity
            android:name=".CatagoryMisir"
            android:label="Misir Ali"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeMisir" />
        <activity
            android:name=".CatagoryHimu"
            android:label="Himu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeHimu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>