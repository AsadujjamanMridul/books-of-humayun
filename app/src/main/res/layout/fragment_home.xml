<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"

    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="120dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humayun Ahmed"
                    android:fontFamily="@font/titilliumwebbold"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="45dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center_horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_himu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="13dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_himu" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/himu">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:paddingBottom="3dp"
                            android:text="@string/himu"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_misir"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_misir" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/misir">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/misir_ali"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_shuvro"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_shuvro"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/shuvro">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shuvro"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center_horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_novels"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="13dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_novel" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/novel">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novels"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_science"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_science" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/science">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Science Fiction"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/catagory_other"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/ripple_effect_catagory">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/catagory_other"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/other">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/titilliumwebsemibold"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</FrameLayout>